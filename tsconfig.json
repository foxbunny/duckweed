{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "lib": ["es2015", "es2016", "esnext.asynciterable", "dom"],
    "jsx": "react",
    "jsxFactory": "html",
    "removeComments": false,
    "outDir": "./",

    // Make iterators compatible
    "downlevelIteration": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*.test.ts"
  ]
}
